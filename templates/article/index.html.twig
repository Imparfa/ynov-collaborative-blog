{# templates/article/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}All Articles{% endblock %}

{% block body %}
    <div class="articles">
        <h2>All articles</h2>
        <div class="article-list">
            {% for article in articles %}
                <div class="article-item">
                    <h3>{{ article.title }}</h3>
                    <p>{{ article.content|slice(0, 100) }}...</p>
                    <a href="{{ path('article_show', {'id': article.id}) }}" class="btn">Read more</a>
                </div>
            {% else %}
                <p>No articles found.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
